# ===========================================
# NeuroStudy - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your actual values

# Database
POSTGRES_USER=neurostudy
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=neurostudy
DATABASE_URL=postgresql://neurostudy:your-password@localhost:5432/neurostudy?sslmode=disable
DATABASE_URL_DOCKER=postgresql://neurostudy:your-password@postgres:5432/neurostudy?sslmode=disable

# Backend
BACKEND_PORT=8080
JWT_SECRET=generate-a-secure-random-string-min-32-characters

# AI Worker
AI_WORKER_PORT=5000
AI_WORKER_URL=http://localhost:5000
AI_WORKER_URL_DOCKER=http://ai-worker:5000

# Cloudinary (sign up at https://cloudinary.com)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# OpenAI (get key from https://platform.openai.com)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Environment
NODE_ENV=development